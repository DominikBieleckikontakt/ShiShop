datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL") 
  relationMode      = "prisma"  
}

generator client {
  provider = "prisma-client-js"
}

model Products {
  id          BigInt  @id @default(autoincrement())
  name        String
  description String
  price       Float
  image       String
  sizes       String[]
  categories  String[]
}

model Categories {
  id          BigInt @id @default(autoincrement())
  name        String
}